<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="si.fri.bmo.airsnif" >

    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_UPDATES" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NewActivity"
            android:label="@string/title_activity_new" >
        </activity>
        <activity
            android:name=".WifiSniffActivity"
            android:label="@string/title_activity_wifi_sniff" >
        </activity>
        <activity
            android:name=".GSMSSniffActivity"
            android:label="@string/title_activity_gsmssniff" >
        </activity>
        <activity
            android:name=".BTSniffActivity"
            android:label="@string/title_activity_btsniff" >
        </activity>
        <activity
            android:name=".GPRSSniffActivity"
            android:label="@string/title_activity_gprssniff" >
        </activity>
        <activity
            android:name=".LTESniffActivity"
            android:label="@string/title_activity_ltesniff" >
        </activity>
        <activity
            android:name=".GPSSnifActivity"
            android:label="@string/title_activity_gpssnif" >
        </activity>
    </application>

</manifest>
